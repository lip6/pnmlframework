				<module>../pnmlFwFeature-CoreModel</module>
				<module>../pnmlFwFeature-CoreModel-Source</module>
				<module>../pnmlFwFeature-PTNet</module>
				<module>../pnmlFwFeature-PTNet-Source</module>
				<module>../pnmlFwFeature-SNNet</module>
